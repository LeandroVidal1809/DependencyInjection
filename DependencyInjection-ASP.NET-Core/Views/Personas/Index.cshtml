@using DependencyInjection_ASP.NET_Core.ViewModel
@model PersonaViewModel
@{
    ViewData["Title"] = "Persona";
}

    <div class="text-center col-12">
        <h1 class="display-4">Personas</h1>
        <div class="col-12 text-left">
            <div class="form-group">
                @Html.LabelFor(x => x.Documento, " Documento:")
                @Html.TextBoxFor(x => x.Documento, new { @class = "form-control col-lg-4" })
            </div>
            <div class="form-group d-inline-flex">
                <button type="button" id="DatosPersona" style="margin-right:5%" class="btn btn-primary">Traer</button>
            </div>
            <div class="form-group d-inline-flex">
                <button type="button" id="EjemploPersona" style="margin-right:5%" class="btn btn-secondary">Ejemplo</button>
            </div>
            @Html.TextBoxFor(x => x.Nombre, new { @class = "form-control col-lg-4 disabled" })
            @Html.TextBoxFor(x => x.FecNacimiento, new { @class = "form-control col-lg-4 disabled" })
            @Html.TextBoxFor(x => x.Edad, new { @class = "form-control col-lg-4 disabled" })
            @Html.TextBoxFor(x => x.Sexo, new { @class = "form-control col-lg-4 disabled" })
        </div>

        </div>
    </div>
