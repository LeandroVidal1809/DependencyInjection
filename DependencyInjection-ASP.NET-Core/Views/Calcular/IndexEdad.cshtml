@using DependencyInjection_ASP.NET_Core.ViewModel
@model EdadViewModel
@{
    ViewData["Title"] = "Edad";
}


<div class="text-center col-12">
    <h1 class="display-4">Edad</h1>
    <div class="col-12 text-left">
        <div class="form-group">
            @Html.LabelFor(x => x.FechaNacimiento, "Fecha Nacimiento:")
            @Html.TextBoxFor(x => x.FechaNacimiento, new { @class = "form-control col-lg-4" })
        </div>
        <div class="form-group d-inline-flex">
            <button type="button" id="CalcularEdad" style="margin-right:5%" class="btn btn-primary">Calcular Edad</button>
            <button type="button" id="EjemploEdad" style="margin-right:12%" class="btn btn-secondary">Ejemplo</button>
            @Html.TextBoxFor(x => x.Edad, new { @class = "form-control col-lg-4" })
        </div>
    </div>

</div>

